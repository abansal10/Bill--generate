<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/product.css">
    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>

            <main>
                <div class="form-style-5">
                    <form action="/add-bill" method="POST">
                        <div class="form-control">
                            <label for="name">Customer Name</label>
                            <input type="text" name="name" id="name">
                        </div>
                        <div class="form-control">
                            <label for="address">Address</label>
                            <input type="text" name="address" id="address">
                        </div>
                        <div class="form-control">
                            <label for="price">Price</label>
                            <input type="number" name="price" id="price" step="0.01" required="true">
                        </div>
                        <div class="form-control">
                            <label for="quantity">Quantity</label>
                            <input type="number" name="quantity" id="quantity" step="0.01" required="true">
                        </div>
                        <div class="form-control">
                            <label for="date">Bill date:</label>
                            <input type="date" id="date" name="date" required="true">
                        </div>
                        <button class="btn" type="submit">Add Product</button>
                    </form>
                </div>
            </main>
            <%- include('../includes/end.ejs') %>
    </body>